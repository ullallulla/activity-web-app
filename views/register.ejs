<%- include('./partials/header.ejs') %>
<div class="py-5 text-center container">
<h1>Registration</h1>

<%- include('./partials/error.ejs') %>

<div class="my-5 col-lg-6 col-md-8 mx-auto">
<form method="POST">
    <div class="form-group row-sm-2">
        <label for="email" ><strong>Email:</strong></label>
        <input type="email" name="email" id="register-email" class="form-control"/>
    </div>
    <div class="form-group row-sm-2">
        <label for="password" ><strong>Password:</strong></label>
        <input type="password" name="password" id="register-password" class="form-control"/>
        <small id="passwordHelpBlock" class="form-text text-muted">
            Password must contain at least 4 characters.
        </small>
    </div>
    <div class="form-group row-sm-2">
        <label for="verification" ><strong>Password verification:</strong></label>
        <input type="password" name="verification" id="register-verification" class="form-control"/>
        <small id="verificationHelpBlock" class="form-text text-muted">
            Passwords must match.
        </small>
    </div>
    <input type="submit" value="Submit!" id="register-button" class="btn btn-primary"/>
</form>
</div>
</div>
<%- include('./partials/footer.ejs') %>